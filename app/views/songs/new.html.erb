<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
 <%= f.label :title %>
 <%= f.text_field :title %>
 <br />

 <%= f.label :artist %>
 <%= f.text_field :artist, :id => "song_artist_name" %>
 <br />
 <br><br>

 <%= f.collection_select :genre_id, @genres, :id, :name %>
 <br><br>

 <%= f.label :notes %><br>
 <%= f.text_field :notes, :name => "notes[content][]", :id => "song_notes_1", :value => ""  %><br>
 <%= f.text_field :notes, :name => "notes[content][]", :id => "song_notes_2", :value => "" %>
 <br><br>
 <%= f.submit "commit", :name => "commit" %>
<% end %>
